#cmakedefine HEADER_FOUND_SYS_TYPEYPES_H
#cmakedefine JSB_MAX_STRING_SIZE @JSB_MAX_STRING_SIZE@

#if defined(HEADER_FOUND_STDDEF_H)
#include <stddef.h>
#endif

#if defined(HEADER_FOUND_STDINT_H)
#include <stdint.h>
